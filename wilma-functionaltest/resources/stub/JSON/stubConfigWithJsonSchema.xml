<?xml version="1.0" encoding="UTF-8"?>
<wilma-stub xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://epam.github.io/Wilma/xsd/StubConfig"
            xsi:schemaLocation="http://epam.github.io/Wilma/xsd/StubConfig http://epam.github.io/Wilma/xsd/StubConfig.xsd">
    <dialog-descriptor comment="random comment" name="error-descriptor" usage="always">
        <condition-descriptor>
            <not>
                <condition class="JsonSchemaChecker">
                    <param name="schema" value="jsonTestSchema.json"/>
                    <param name="isSchemaVolatile" value="false"/>
                </condition>
            </not>
        </condition-descriptor>
        <response-descriptor code="200" delay="0" mimetype="application/json" template="templateBadFile"/>
    </dialog-descriptor>
    <dialog-descriptor comment="random comment" name="always-descriptor" usage="always">
        <condition-descriptor>
            <condition class="AlwaysTrueChecker"/>
        </condition-descriptor>
        <response-descriptor code="200" delay="0" mimetype="application/json" template="templateGoodFile"/>
    </dialog-descriptor>

    <template-descriptor name="template-descriptor_1">
        <template name="templateBadFile" resource="responseWithBadSchema.json" type="jsonfile"/>
        <template name="templateGoodFile" resource="responseWithSchema.json" type="jsonfile"/>
    </template-descriptor>
</wilma-stub>