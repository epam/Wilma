<?xml version="1.0" encoding="UTF-8"?>
<wilma-stub xmlns="http://epam.github.io/Wilma/xsd/StubConfig" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://epam.github.io/Wilma/xsd/StubConfig http://epam.github.io/Wilma/xsd/StubConfig.xsd">
    <dialog-descriptor name="CircuitBreakerExampleConfiguration" usage="always" comment="Circuit Breaker">
        <condition-descriptor>
            <condition class="com.epam.wilma.extras.circuit.breaker.CircuitBreakerChecker">
                <param name="path" value="http://"/>
                <param name="timeoutInSec" value="15"/>
                <param name="successCodes" value="200,201,303"/>
                <param name="maxErrorCount" value="4"/>
            </condition>
        </condition-descriptor>
        <response-descriptor code="503" delay="0" mimetype="text/plain" template="circuitBreakerTemplate">
            <template-formatter class="com.epam.wilma.extras.shortcircuit.ShortCircuitResponseGenerator"/>
        </response-descriptor>
    </dialog-descriptor>
    <template-descriptor name="templateDescriptor1">
        <template name="circuitBreakerTemplate" type="external"
                  resource="com.epam.wilma.extras.circuit.breaker.CircuitBreakerResponseGenerator"/>
    </template-descriptor>
    <interceptors>
        <interceptor name="Circuit Breaker Response Investigator"
                     class="com.epam.wilma.extras.shortcircuit.CircuitBreakerInterceptor"/>
    </interceptors>
</wilma-stub>